{
  "name": "bdd-ai-assistant",
  "version": "1.0.0",
  "description": "Modern BDD assistant powered by LLMs - generates tests and living documentation from Gherkin features",
  "main": "dist/index.js",
  "bin": {
    "bdd-ai": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "cli": "tsx src/cli/index.ts",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "bdd",
    "gherkin",
    "testing",
    "ai",
    "documentation",
    "cucumber"
  ],
  "author": "BDD AI Assistant",
  "license": "MIT",
  "dependencies": {
    "@cucumber/gherkin": "^36.0.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "gherkin": "^9.0.0",
    "glob": "^10.3.10",
    "marked": "^9.1.6",
    "mermaid": "^10.6.1",
    "openai": "^4.20.1",
    "ora": "^7.0.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
